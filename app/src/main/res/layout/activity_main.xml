<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
     android:background="@drawable/img">

    <EditText
        android:id="@+id/textSurahNo"
        android:layout_width="339dp"
        android:layout_height="62dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Enter surah number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textVerseNo"
        android:layout_width="337dp"

        android:layout_height="74dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Enter Verse number"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnVF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSurahNo" />

    <Button
        android:id="@+id/btnVF"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/cardview_dark_background"

        android:text="Verse Arabic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVerseNo" />

    <Button
        android:id="@+id/btnGitLink"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="GitHubLink"
        android:layout_margin="10dp"
        android:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVF" />

    <TextView
        android:id="@+id/textVerseArabic"
        android:layout_width="323dp"
        android:layout_height="366dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/noorehuda_regular"
        android:isScrollContainer="false"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:text="بِسۡمِ اللّٰہِ الرَّحۡمٰنِ الرَّحِیۡم"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGitLink" />

</androidx.constraintlayout.widget.ConstraintLayout>